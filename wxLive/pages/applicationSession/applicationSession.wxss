/* 步骤 */
.step {
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f2f2f2;
}

.applicationSession {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

.applicationSession-list {
  flex-grow: 1;
}

.applicationSession-item {
  border-bottom: 1px solid #f2f2f2;
  min-height: 100rpx;
  margin: 0 20rpx;
  padding: 0 10rpx;
}

.applicationSession-item-header {}

.applicationSession-item-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.applicationSession-item-footer {
  margin: 0 10rpx;
  font-size: 20rpx;
  color: #ccc;
  height: 100%;
  box-sizing: border-box;
  padding-bottom: 20rpx;
}

.applicationSession-item-title {
  margin: 0 10rpx;
  font-size: 30rpx;
  line-height: 48rpx;
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx 0;
  white-space: nowrap;
}

.applicationSession-item_cover {
  padding: 40rpx 0;
}

.applicationSession-item_cover-image {
  width: 320rpx;
  flex-shrink: 0;
  margin-right: 10rpx;
  position: relative;
}

.applicationSession-item_cover-image-background,
.applicationSession-item_cover-image-foreground {
  position: absolute;
}

.applicationSession-item_cover-image custom-image {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.applicationSession-item_cover-detail {
  flex-grow: 1;
}

.applicationSession-item-scanner {
  flex-grow: 1;
  min-height: 100rpx;
  margin: 0 10rpx;
  font-size: 30rpx;
}

.applicationSession-item_switch {
  margin-left: 10rpx;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.applicationSession-item-upload {
  margin: 0 10rpx;
  font-size: 30rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  background-color: #f2f2f2;
  color: #31bfc3;
  border-radius: 10rpx;
  width: fit-content;
}

.applicationSession-item_radioGroup {
  display: flex;
  align-items: center;
  height: auto;
  margin-bottom: 20rpx;
  min-height: 40rpx;
}

.applicationSession-item_radio {
  margin-right: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  min-height: 40rpx;
}

.applicationSession-item_input {
  text-align: right;
}

.applicationSession-button-group {
  display: flex;
  align-items: center;
  width: 100%;
}

.applicationSession-submit {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 10rpx;
  margin: 20rpx;
  z-index: 1001;
  flex-grow: 1;
  width: 0;
  height: 80rpx;
  background-image: linear-gradient(90deg, #31bfc3, #3f7ab6);
}

.applicationSession-back {
  color: #31bfc3;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 10rpx;
  margin: 20rpx;
  width: 200rpx;
  flex-shrink: 0;
  box-sizing: border-box;
  height: 80rpx;
  border: 2rpx solid #31bfc3;
}

.applicationSession-item-qr {
  width: 400rpx;
  height: 400rpx;
  display: block;
  margin: 40rpx auto;
}

.applicationSession-item-tip {
  white-space: pre-wrap;
}


.formCover-footer {
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
  right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.formCover-footer-coverComment {
  width: 132rpx !important;
  height: 32rpx !important;
  margin: 0 4rpx;
  margin-right: auto;
}

.formCover-footer-button {
  width: 32rpx !important;
  height: 32rpx !important;
  margin: 0 4rpx;
}
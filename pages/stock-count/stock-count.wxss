.tab_box{
	width: 100%;
	overflow: hidden;
	text-align: center;
	background: #fff;
	border-bottom: 1px solid #eee;
}
.tab{
	width: 20%;
	padding: 15rpx 50rpx;
	line-height: 60rpx;
	font-size: 32rpx;
	color: #7d7e8f;
	display: inline-block;
}
.tab.active{
	color: #ff6600;
	position: relative;
}
.tab.active::after{
	content: "";
	width: 40rpx;
	height: 4rpx;
	border-radius: 4rpx;
	background: #ff6600;
	position: absolute;
	bottom: 0;
	left: 50%;
	margin-left: -20rpx;
}
.show{
	display:block;
}
.hidden{
	display:none;
}

.big{
	padding: 0 20rpx;
	overflow: hidden;
}
.card_a{
	width: 100%;
	height: auto;
	overflow: hidden;
	font-size: 34rpx;
	color: #666;
}
.card_a1{
	width: 180rpx;
	height: 50rpx;
	line-height: 50rpx;
	float: left;
}
.card_a2{
	width: calc( 100% - 180rpx );
	height: 50rpx;
	line-height: 50rpx;
	float: left;
}
.card_b{
	width: 100%;
	margin-top: 20rpx;
	overflow: hidden;
}
.card_b1{
	width: 100%;
	height: 50rpx;
	line-height: 50rpx;
	font-size: 34rpx;
	color: #272844;
}
.card_b2{
	width: 100%;
	height: auto;
	overflow: hidden;
}
.card_b2_img custom-image {
  width: 100%;
}
.card_b2 textarea{
	width: calc( 100% - 40rpx );
	padding: 20rpx;
	min-height: 320rpx;
	background: #efefef;
	border-radius: 10rpx;
	overflow: hidden;
	font-size: 28rpx;
	color: #272844;
}
.card_c{
	width: 100%;
	height: auto;
	overflow: hidden;
	padding-top: 120rpx;
	text-align: center;
}
.card_c button{
	width: 46%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	border: 1px solid #ff6600;
	border-radius: 10rpx;
	color: #ff6600;
	font-size: 38rpx;
	background: #fff;
	display: inline-block;
	margin: 0 2%;
}
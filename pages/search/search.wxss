#container {
  min-height: 100vh;
}



/* 搜索 */
#search {
  margin: 20rpx;
}



.fl{
	float: left;
}
.fr{
	float: right;
}
.search_top_box{
	padding: 5rpx 20rpx;
}
.search_top_a{
	width: calc( 100% - 80rpx );
	height: 80rpx;
	background: #f2f2f2;
	border-radius: 10rpx;
}
.search_top_a_a {
	width: 44rpx;
	height: 80rpx;
	overflow: hidden;
	margin: 0 20rpx;
	background: url('https://cm.chineseglory.cn/images/icon1.png') no-repeat center center;
	background-size: contain;
}
.search_top_a_b{
	width: calc( 100% - 104rpx );
	height: 80rpx;
	line-height: 80rpx;
	overflow: hidden;
	padding-right:20rpx;
	font-size: 29rpx;
	color: #272844;
}
.search_top_b{
	width: 80rpx;
	height: 80rpx;
	line-height: 80rpx;
	font-size: 29rpx;
	color: #ff6600;
	text-align: right;
}
.search_top_b button{
	width: 80rpx;
	height: 80rpx;
	line-height: 80rpx;
	font-size: 29rpx;
	color: #ff6600;
	background: none;
	padding:0;
	text-align: right;
}
.search_top_b button::after{
	border: none;
}
.search_box{
	padding: 20rpx;
	overflow: hidden;
}
.search_a{
	padding: 0 4rpx;
	overflow: hidden;
	height: 60rpx;
	border-bottom: 1px solid #eeeeee;
	margin-bottom: 20rpx;
}
.search_a1{
	height: 60rpx;
	line-height: 60rpx;
	float: left;
	font-size: 36rpx;
	font-weight: bold;
	color: #272844;
}
.search_a2{
	height: 60rpx;
	line-height: 60rpx;
	float: right;
	font-size: 30rpx;
	color: #666666;
}
.search_b{
	width: 100%;
	height: auto;
	overflow: hidden;
	padding-bottom: 20rpx;
}
.search_b1{
	width:50%;
	height: 36rpx;
	line-height: 36rpx;
	float: left;
	box-sizing: border-box;
	border-left: 3px solid #3576ad;
	padding-left: 8rpx;
	font-size: 33rpx;
	color: #666666;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	margin-bottom: 35rpx;
}
.search_c{
	width: 100%;
	height: auto;
	overflow: hidden;
	padding-bottom: 20rpx;
}
.search_c_a{
	width:50%;
	height: 36rpx;
	line-height: 36rpx;
	float: left;
	box-sizing: border-box;
	overflow: hidden;
	margin-bottom: 35rpx;
}
.search_c_a1{
	width: 36rpx;
	height: 36rpx;
	border-radius: 5rpx;
	text-align: center;
	float: left;
	font-size: 28rpx;
	color: #fff;
	background: #ccc;
	margin-right: 10rpx;
}
.search_c_a2{
	font-size: 33rpx;
	color: #666666;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.hot1{
	background: #ec1e1a;
}
.hot2{
	background: #ff6600;
}
.hot3{
	background: #feb500;
}

#container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #FFF;
}
#tab {
  flex: 1;
}
#tab-nav {
  height: 140rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  text-align: center;
}
.tab-nav-underline {
  display: none;
}
.tab-nav-item {
  flex-grow: 0!important;
}
.tab-content {
  padding: 40rpx 0;
}

/* 海报-详情 */
.poster-detail {
}

/* 海报-元素 */
.poster-item {
  width: 120rpx;
  height: 140rpx;
  box-sizing: border-box;
  border: 2rpx solid #404040;
  position: relative;
}
.poster-item-active {
  border-color: #F4871D;
}
.poster-item-cover {
  width: 100%;
  height: 100%;
}
.poster-item-checked {
  position: absolute;
  top: 0;
  right: 0;
  width: 54rpx;
  height: 54rpx;
}

/* 保存海报 */
.save-poster {
  width: 320rpx;
  height: 100rpx;
  padding: 20rpx 0;
  margin: auto;
  background-color: transparent;
}
/* pages/online/online.wxss */
.server {
  padding-bottom: 30rpx;
  background-color: #f5f5f5;
}
.server image {
  width: 100%;
  height: 333rpx;
}
.list {
  margin-top: 42rpx;
  padding: 0 24rpx;
}
.item {
  margin-bottom: 15rpx;
  padding: 32rpx 24rpx 32rpx 43rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #ffffff;
  border-radius: 6px;
  border: 1px solid #eeeeee;
}
.item-left {
  display: flex;
}
.item-left-content {
  margin-left: 42rpx;
}
.content-name {
  font-size: 30rpx;
  color: #010101;
  font-weight: bold;
}
.content-detail {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #a5a5a5;
}
/* 左侧icon */
.item .item-left .item-left-icon .icon {
  height: 85rpx;
  width: 85rpx;
}

.item-right-content {
  padding: 10rpx 28rpx;
  font-size: 22rpx;
  color: #ff6600;
  border: 1px solid #ff6600;
  border-radius: 20px;
}
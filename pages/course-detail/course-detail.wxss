/* 容器 */
#container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F2F2F2;
}


/* 选项卡 */
#tab {
  margin-top: 20rpx;
  flex-grow: 1;
}
/* 选项卡-导航 */
#tab-nav {
  position: sticky;
  top: 0;
  z-index: 1001;
  background-color: #FFF;
}
.tab-item {
  background-color: #FFF;
}



/* 播放器 */
#course-audio {
  margin: 20rpx 0;
}



/* 课程-顶部 */
.course-header {
  background-color: #FFF;
  overflow: auto;
}

/* 课程-中部 */
.course-body {
  background-color: #FFF;
  padding: 10rpx 0;
}

/* 课程-底部 */
.course-footer {
  position: sticky;
  height: 120rpx;
  padding: 0 30rpx;
  margin-top: 20rpx;
  padding-bottom: env(safe-area-inset-bottom, 10rpx);
  display: flex;
  align-items: center;
  justify-content: space-between;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1002;
  background-color: #FFF;
}

/* 课程-左右布局 */
.course-wing {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 20rpx;
}

/* 课程-海报 */
.course-poster {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  background-image: linear-gradient(90deg, #EF8644, #ED6F3F);
  color: #FFF;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  position: fixed;
  top: 70rpx;
  right: 0;
  z-index: 1002;
}

/* 课程-封面 */
.course-cover {
  width: 475rpx;
  height: 650rpx;
  margin: auto;
}

/* 课程-标题 */
.course-title {
  font-size: 34rpx;
  font-weight: bold;
  line-height: 34rpx;
  flex: 1;
  width: 0;
}

/* 课程-参与 */
.course-join {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
}
.course-join custom-image {
  width: 24rpx;
  height: 24rpx;
}

/* 课程-价格 */
.course-price {
  color: var(--main);
  font-size: 48rpx;
  line-height: 48rpx;
  font-weight: bold;
}
.course-price::before {
  display: inline;
  content: '¥';
  font-size: 32rpx;
  font-weight: normal;
}
.course-price-disabled {
  color: #CCC;
  text-decoration: line-through;
}

/* 课程-标签-列表 */
.course-tag-list {
  flex: 1;
  display: flex;
  align-items: center;
}
/* 课程-标签-元素 */
.course-tag-item {
  border: 2rpx solid currentColor;
  color: #ec702e;
  font-size: 20rpx;
  border-radius: 20rpx;
  line-height: 28rpx;
  padding: 0 10rpx;
  margin: 0 20rpx;
}

/* 课程-简介 */
.course-intro {
  color: #999;
  margin: 10rpx 20rpx;
  font-size: 24rpx;
  line-height: 28rpx;
}

/* 课程-状态 */
.course-status {
  color: #999;
}
.course-status-active {
  color: var(--main);
}
/* 课程-状态-图标 */
.course-status-icon {
  width: 40rpx;
  height: 40rpx;
  margin: auto;
}
/* 课程-状态-标题 */
.course-status-title {
  font-size: 24rpx;
}



/* 导师 */
.tutor {
  display: flex;
  align-items: center;
}

/* 导师-详情 */
.tutor-detail {
  margin: 0 20rpx;
}

/* 导师-头像 */
.tutor-avatar {
  height: 100rpx;
  width: 100rpx;
}

/* 导师-昵称 */
.tutor-nickname {
  height: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 导师-标签 */
.tutor-label {
  height: 40rpx;
  font-size: 24rpx;
  color: #999;
}

/* 导师-进入 */
.tutor-enter {
  width: 40rpx;
  height: 40rpx;
}



/* 菜单-列表 */
.menu-list {
  display: flex;
  align-items: center;
  height: 100%;
  margin: 0 10rpx;
}
/* 菜单-元素 */
.menu-item {
  flex-direction: column;
  margin: initial;
  width: 100rpx;
  height: 100rpx;
}
/* 菜单-元素-图标 */
.menu-item-icon {
  width: 46rpx;
  height: 46rpx;
  margin: 0 20rpx;
}
/* 菜单-元素-标题 */
.menu-item-title {
  margin-top: 10rpx;
  line-height: 24rpx;
  color: #999;
  font-size: 24rpx;
}



/* 按钮-组合 */
.button-group {
  margin: 0 10rpx;
  width: 460rpx;
  height: 72rpx;
  display: flex;
  border-radius: 36rpx;
  overflow: hidden;
  font-size: 24rpx;
}
.button-group-start {
  flex: 1;
  height: 100%;
  background-image: linear-gradient(90deg, #F6CA56, #F3AE4D);
  color: #FFF;
}
.button-group-end {
  flex: 1;
  height: 100%;
  background-image: linear-gradient(90deg, #EF8644, #ED6F3F);
  color: #FFF;
}



/* 申请 */
.apply {
  font-size: 28rpx;
  color: var(--main);
}

/* 申请-表格 */
.apply-table {
  font-size: 28rpx;
  border-radius: 20rpx;
  width: 645rpx;
  margin: auto;
  padding: 10rpx;
  box-sizing: border-box;
  border: 2rpx solid var(--main);
  table-layout: fixed; 
}
.apply-table td {
  padding: 10rpx;
}
.apply-table td:first-of-type {
  white-space: nowrap;
  width: 180rpx;
}

/* 申请-提交 */
.apply-submit {
  padding: 0;
  width: 645rpx;
  margin: 40rpx auto;
  border-radius: 47rpx;
  height: 94rpx;
}



/* 自定义提示框 */
.popup-container {
  position: relative;
}
/* 表单-成功-背景 */
.popup-background {
  width: 460rpx;
}
/* 自定义提示框-按钮-列表 */
.popup-button-list {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  padding: 0 20rpx;
}
/* 自定义提示框-按钮-元素 */
.popup-button-item {
  margin: 0 20rpx;
  font-size: 24rpx;
  position: relative;
  display: flex;
  flex-grow: 1;
  align-items: center;
  justify-content: center;
  height: 70rpx;
  border-radius: 35rpx;
  box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.4);
  overflow: hidden;
}
/* 自定义提示框-按钮-取消 */
.popup-button-cancel {
  color: var(--main);
}
.popup-button-cancel::after {
  background-color: var(--main);
  opacity: 0.2;
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
/* 自定义提示框-按钮-确定 */
.popup-button-confirm {
  height: 70rpx;
  background-color: var(--main);
  color: #FFF;
}
/* 自定义提示框-内容 */
.popup-content {
  text-align: center;
  position: absolute;
  top: 230rpx;
  left: 0;
  right: 0;
}



.group-fail-title {
  font-size: 40rpx;
  color: var(--main);
}
.group-fail-content {
  font-size: 28rpx;
}
.auth-fail-title {
  font-size: 32rpx;
  font-weight: bold;
}
.auth-fail-content {
  margin-top: 20rpx;
  font-size: 24rpx;
}

/* 新加 */
.popup-new {
  height: 483rpx;
  width: 462rpx;
  background-color: #ffffff;
  border-radius: 16px;
  overflow: hidden;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.popup-new image {
  width: 100%;
  height: 207rpx;
}
.pay-atonce-content {
  margin-top: 60rpx;
  font-size: 40rpx;
  color: #010101;
}

.go-pay {
  margin-top: 61rpx;
  width: 316rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #ffffff;
  background-color: #f8803d;
  border-radius: 35px;
  font-size: 22rpx;
}

/* 没有库存 */
.btn-list {
  margin-top: 55rpx;
  display: flex;
  justify-content: center;
}
.btn-list view {
  width: 192rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 35px;
  font-size: 22rpx;
}
.go-supply {
  background-color: #f8803d;
  color: #ffffff;
}
.original-price-pay {
  box-sizing: border-box;
  margin-left: 30rpx;
  border: 1px solid #f8803d;
  color: #f8803d;
}
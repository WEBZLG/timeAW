#container {
  min-height: 100vh;
}

.stock_box{
	padding: 20rpx;
	overflow: hidden;
}
.stock{
	width: 100%;
	height: auto;
	box-shadow: 0 0 10rpx rgba(0,0,0,0.5);
	border-radius: 10rpx;
	overflow: hidden;
}
.stock_a{
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	background: url('https://cm.chineseglory.cn/images/bg5.png') repeat-x center center;
	background-size: contain;
	color: #fff;
	font-size: 28rpx;
	box-sizing: border-box;
	padding: 0 20rpx;
}
.stock_b{
	width: 100%;
	height: auto;
	overflow: hidden;
	padding: 60rpx 0;
	text-align: center;
	display: flex;
	justify-content: center;
	align-items: center;
}
.stock_b_a{
	width: 100rpx;
	flex: 1;
	height: auto;
	overflow: hidden;
	display:inline-block;
	text-align: center;
	display: flex;
	justify-content: center;
	flex-direction: column;
	align-items: center;
	/* margin: 0 60rpx; */
}
.stock_b_a1{
	width: 100rpx;
	height: 80rpx;
}
.stock_b_a1 image{
	width: 80rpx;
	height: 80rpx;
}
.stock_b_a2{
	/* width: 100rpx; */
	height: 34rpx;
	line-height: 34rpx;
	color: #eba76d;
	font-size: 24rpx;
}
.tab_box{
	width: 100%;
	overflow: hidden;
	text-align: center;
	border-bottom: 1px solid #eee;
}
.tab{
	width: 20%;
	padding: 15rpx 10rpx;
	line-height: 60rpx;
	font-size: 32rpx;
	color: #7d7e8f;
	display: inline-block;
}
.tab.active{
	color: #ff6600;
	position: relative;
}
.tab.active::after{
	content: "";
	width: 40rpx;
	height: 4rpx;
	border-radius: 4rpx;
	background: #ff6600;
	position: absolute;
	bottom: 0;
	left: 50%;
	margin-left: -20rpx;
}
.show{
	display:block;
}
.hidden{
	display:none;
}
.card_box{
	padding: 10rpx 20rpx;
	overflow: hidden;
}
.card{
	padding: 0 20rpx 0 20rpx;
	border-radius: 10rpx;
	overflow: hidden;
	background: #fafafa;
	margin-bottom: 10rpx; 
}
.card_a{
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	font-size: 26rpx;
	color: #999999;
	border-bottom: 1px solid #eee;
}
.card_a1{
	width: 50%;
	height: 80rpx;
	float: left;
}
.card_a2{
	width: 50%;
	height: 80rpx;
	float: right;
	text-align: right;
}
.status{
	color: #e14545;
}
.status1{
	color: #67a31a;
}
.status2{
	color: #e14545;
}
.status3{
	color: #f7ae11;
}

.daoshi{
	width: 100%;
	height: auto;
	overflow: hidden;
	padding-top: 20rpx;
}
.daoshi_a{
  margin-top: 10rpx;
	width: 100rpx;
	height: 100rpx;
	text-align: center;
	box-sizing: border-box;
	border:1px solid #f60;
	border-radius: 50%;
	float: left;
}
.daoshi_a image{
	width: 100%;
	height: 100%;
	overflow: hidden;
	border-radius: 50%;
}
.daoshi_b{
	width: calc( 100% - 320rpx );
	height: 140rpx;
	float: left;
	padding: 0 20rpx; 
}
.daoshi_b_a{
	width: 100%;
	height: 50rpx;
	/* padding-top: 10rpx; */
	font-size: 28rpx;
	color: #666;
	line-height: 50rpx;
	overflow: hidden;
  /* margin-top: 5rpx; */
}
.daoshi_b_a view{
	font-size: 32rpx;
	color: #272844;
	font-weight: bold;
	float: left;
	line-height: 50rpx;
	margin-right: 10rpx;
}
.daoshi_b_a text{
	font-size: 20rpx;
	color: #ff6600;
	float: left;
	border: 1px solid #ff6600;
	border-radius: 15rpx;
	height: 32rpx;
	line-height: 32rpx;
	padding: 0 6rpx;
	margin-top:8rpx;
}
.daoshi_b_b{
	height: 34rpx;
	line-height: 34rpx;
	overflow: hidden;
	font-size: 24rpx;
	color: #757587;
}
.daoshi_b_c{
	height: 32rpx;
	line-height: 32rpx;
	overflow: hidden;
	background: url('https://cm.chineseglory.cn/images/icon2.png') no-repeat left center;
	background-size: 28rpx;
	padding-left: 32rpx;
	margin-top: 10rpx;
	font-size: 24rpx;
	color: #757587;
}
.daoshi_c{
	width: 140rpx;
	/* height: 30px; */
	line-height: 30rpx;
	float: right;
	text-align: right;
	font-size: 24rpx;
	color: #999;
	margin-top:90rpx;
}


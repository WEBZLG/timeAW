#container {
  min-height: 100vh;
}

#tab {
  min-height: 100vh;
}
tab-nav-item {
  flex: 0!important;
  padding: 0!important;

}
.tab-nav {
  height: fit-content;
  position: sticky;
  top: 0;
  z-index: 1001;
  background-color: #FFF;
}
.tab-nav-list-inner {
  padding: 10rpx;
  height: initial!important;
  flex-wrap: wrap!important;
}
.tab-nav-item {
  margin: 10rpx;
  font-size: 24rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 12rpx;
  border-radius: 20rpx;
  width: fit-content;
  background-color: #F2F2F2;
}
.tab-nav-item custom-image {
  width: 24rpx;
  height: 24rpx;
}
/* 自定义选择-选中 */
.tab-nav-active {
  background-color: var(--main);
  color: #FFF;
}

tab-content {
  flex: 1;
}



/* 发布 */
.release {
  position: fixed;
  right: 20rpx;
  bottom: 80rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.release custom-image {
  width: 100%;
  height: 100%;
}



/* 自定义提示框（成功） */
.form-success-container {
  position: relative;
}
/* 自定义提示框（成功）-背景 */
.form-success-background {
  width: 526rpx;
}
/* 自定义提示框（成功）-按钮 */
.form-success-button {
  margin: auto;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  width: 457rpx;
  height: 104rpx;
}
/* 提示内容 */
.form-msg {
  position: absolute;
  width: 100%;
  margin: auto;
  top: 250rpx;
  left: 0;
  text-align: center;
}
.form-msg-title {
  font-size: 48rpx;
  font-weight: 600;
}
.form-msg-toast {
  margin-top: 15rpx;
}
.form-msg-btn {
  color: white;
  position: absolute;
  width: 78%;
  margin-left: 11%;
  bottom: 48rpx;
  left: 0;
  text-align:center;
  font-size: 36rpx;
  z-index: 999
}


/* 最新动态 */
.new-dynamic {
  margin-top: 10rpx;
  height: 100rpx;
  position: relative;
  background: #F2F2F2;
  display: flex;
  align-items: center;
  justify-content: center;
}
.new-dynamic-bg {
  margin: 0 auto;
  width: 470rpx;
  height: 23rpx;
}
.new-dynamic-content {
  position: absolute;
  text-align: center;
  font-size: 28rpx;
  color: #0b0b0b;
  line-height: 100rpx;
}
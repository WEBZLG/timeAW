page {
  padding-bottom: 200rpx;
}
.show{
	display: block;
}
.hidden{
	display: none;
}
.address_box{
	padding: 20rpx 0;
	overflow: hidden;
	background: url('https://cm.chineseglory.cn/images/icon31.png') no-repeat right center;
	background-size: 38rpx;
}
.address_a{
	padding: 0 60rpx 0 60rpx;
	height: 48rpx;
	line-height: 48rpx;
}
.address_a1{
	width: 60%;
	height: 48rpx;
	float: left;
	font-size: 32rpx;
	color: #272844;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.address_a2{
	width: 40%;
	height: 48rpx;
	float: right;
	font-size: 32rpx;
	color: #666;
	text-align: right;
}
.address_b{
	padding: 0 60rpx 0 60rpx;
	/*height: 48rpx;*/
	line-height: 48rpx;
	font-size: 28rpx;
	color: #858585;
	background: url('https://cm.chineseglory.cn/images/icon56.png') no-repeat 20rpx center;
	background-size: 24rpx;
	word-break:break-all;
}
.address_c{
	padding: 0 60rpx 0 20rpx;
	height: 48rpx;
	line-height: 48rpx;
	font-size: 32rpx;
	color: #858585;
}
.line2{
	width: 100%;
	height: auto;
	overflow: hidden;
}
.line2 image{
	width: 100%;
	float:left;
}
.cart_box{
	/* overflow: hidden; */
  position: relative;
}
.cart{
	width: 710rpx;
  height: 210rpx;
	overflow: hidden;
	margin: 20rpx;
  border-radius: 20rpx;
  position: relative;
  box-shadow: 0 0 20rpx 0 rgba(0, 0, 0, 0.2);
}
.cart_foreground {
  position: relative;
  z-index: 1;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}
.cart_background {
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
}
.cart_a{
	width: 270rpx;
	height: 180rpx;
  margin: 15rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.cart_a image{
	width: 100%;
	height: 100%;
  display: block;
}
.cart_b{
  flex: 1;
  margin: 30rpx 10rpx;
}
.cart_b_a{
	width: 100%;
	height: 50rpx;
	line-height: 50rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	font-size: 32rpx;
	color: #272844;
}
.cart_b_b{
	width: 100%;
	height: auto;
	overflow: hidden;
	padding-top: 80rpx;
}
.cart_b_b_in{
	height: 40rpx;
	line-height: 40rpx;
	border: 1px solid #999;
	float: right;
}
.jian{
	width: 40rpx;
	height: 40rpx;
	text-align: center;
	font-size: 32rpx;
	color: #999999;
	float: left;
}
.jia{
	width: 40rpx;
	height: 40rpx;
	text-align: center;
	font-size: 32rpx;
	color: #999999;
	float: left;
}
.num{
	width: 80rpx;
	height: 40rpx;
	text-align: center;
	font-size: 32rpx;
	color: #272844;
	float: left;
	border-left: 1px solid #999;
	border-right: 1px solid #999;
}
.btn_box{
	position: fixed;
	bottom: 0;
  left: 0;
  right: 0;
  z-index: 1;
	background: #fff;
}
.btn{
	width:645rpx;
	height:94rpx;
	border-radius:47rpx;
	margin:40rpx auto;
}
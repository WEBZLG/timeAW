page{
	background: #fac402;
}
.bg{
	width: 100%;
	height: 100vh;
	background: url('https://cm.chineseglory.cn/images/bg7.png') no-repeat top center;
	background-size: cover;
	overflow: hidden;
}
.pin_box{
	width: calc( 90% - 40rpx );
	height: auto;
	border:2px solid #ff6600;
	border-radius: 10rpx;
	background: #fff;
	padding: 20rpx;
	margin: 200rpx auto 0 auto;
}
.pin_a{
	width: 100%;
	height: auto;
	overflow: hidden;
}
.kecheng{
	width:100%;
	height: auto;
	overflow: hidden;
	margin-bottom: 20rpx;
}
.kecheng_a{
	width:190rpx;
	height:260rpx;
	float: left;
	margin-right: 20rpx;
	position: relative;
}
.kecheng_a image{
	width:190rpx;
	height:260rpx;
	border-radius: 10rpx;
}
.kecheng_a view{
	width: 50rpx;
	height: 50rpx;
	position: absolute;
	right: 10rpx;
	bottom: 10rpx;
	z-index: 10;
	background: url('https://cm.chineseglory.cn/images/icon42.png') no-repeat center center;
	background-size: 100%;
}
.kecheng_b{
	height:260rpx;
	overflow: hidden;
}
.kecheng_b1{
	width:100%;
	height: 40rpx;
	line-height: 40rpx;
	overflow: hidden;
	color: #272844;
	font-size: 36rpx;
	font-weight:bold;
	margin-top: 10rpx;
}
.kecheng_b1 view{
	display: block;
	border: 1px solid #f60;
	padding: 2px;
	font-size: 22rpx;
	line-height: 20rpx;
	color: #f60;
	float: left;
	border-radius: 5rpx;
	margin-top: 7rpx;
	margin-right: 5rpx;
}
.kecheng_b_tag{
	width:100%;
	height: 40rpx;
	line-height: 40rpx;
	overflow: hidden;
	margin-top: 10rpx;
}
.kecheng_b_tag view{
	display: block;
	border: 1px solid #f60;
	padding: 2px;
	font-size: 22rpx;
	line-height: 20rpx;
	color: #f60;
	float: left;
	border-radius: 5rpx;
	margin-top: 7rpx;
	margin-right: 5rpx;
}
.kecheng_b2{
	width:100%;
	height: 76rpx;
	line-height: 38rpx;
	overflow: hidden;
	color: #686877;
	font-size: 28rpx;
	padding-top:10rpx;
}
.kecheng_b3{
	width:100%;
	height: 34rpx;
	line-height: 34rpx;
	overflow: hidden;
	color: #686877;
	font-size: 28rpx;
	box-sizing: border-box;
	margin-top:35rpx;
}
.kecheng_b3a{
	width: 50%;
	height: 34rpx;
	overflow: hidden;
	float: left;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.kecheng_b3b{
	width: 40%;
	height: 34rpx;
	overflow: hidden;
	font-size: 24rpx;
	color: #686877;
	float: left;
	text-align:left;
}
.kecheng_b3b view{
	width: 34rpx;
	height: 34rpx;
	background: url('https://cm.chineseglory.cn/images/icon4.png') no-repeat center center;
	background-size: 90%;
	float: left;
}
.pin_a_a{
	width: 100%;
	padding: 30rpx 0;
	text-align: center;
	overflow: hidden;
	font-size: 30rpx;
	font-weight: bold;
	color: #666666;
}
.pin_a_b{
	width: 100%;
	height: auto;
	overflow: hidden;
}
.pin_btn{
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	border-radius: 10rpx;
	background: #ff6600;
	font-size: 28rpx;
	color: #fff;
}
.pin_btn1{
	width: calc( 100% - 2px );
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	border-radius: 10rpx;
	background: #fff;
	border:1px solid #ff6600;
	font-size: 28rpx;
	color: #ff6600;
}
.pin1_box{
	width: 90%;
	height: auto;
	border:2px solid #ff6600;
	border-radius: 10rpx;
	background: #fff;
	margin: 40rpx auto 0 auto;
}
.pin1_a{
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	background: #ffb27f;
	font-size: 26rpx;
	color: #ff6600;
}
.pin1_b{
	width: 80%;
	height: 80rpx;
	line-height: 80rpx;
	margin: 0 auto;
	position: relative;
}
.pin1_b1{
	width: 100%;
	height: 1px;
	background: #ff6600;
	position: absolute;
	top: 40rpx;
	z-index: 1;
}
.pin1_b2{
	width: 350rpx;
	height: 40rpx;
	line-height: 40rpx;
	background: #fff;
	text-align: center;
	font-size: 26rpx;
	color: #ff6600;
	position: absolute;
	top: 20rpx;
	z-index: 2;
	left: 50%;
	margin-left: -175rpx;
}
.pin1_c{
	width: 100%;
	padding: 40rpx 0 40rpx 0;
	overflow: hidden;
	text-align: center;
}
.pin1_c view{
	width: 80rpx;
	height: 80rpx;
	display: inline-block;
	margin: 0 10rpx;
}
.pin1_c view image{
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
}
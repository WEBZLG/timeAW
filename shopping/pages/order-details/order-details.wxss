@import '../../styles/iconfont.wxss';

#container {
  min-height: 100vh;
  background-color: #f2f2f2;
  position: relative;
}

/* 顶部 */
.order-status {
  height: 205rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #ffffff;
}

/* 红色背景 */
.red-bg {
  background: linear-gradient(180deg, #ff7983 0%, #e8263b 100%);
}

/* 蓝色背景 */
.blue-bg {
  background: linear-gradient(180deg, #33bdc5 0%, #3f79b7 100%);
}

/* 订单状态文字 */
.order-status-content {
  margin-bottom: 10rpx;
  margin-left: 66rpx;
  font-size: 34rpx;
  font-weight: bold;
  line-height: 42rpx;
}

.small-content {
  margin-left: 66rpx;
  font-size: 24rpx;
  line-height: 24rpx;
}

/* 两行 */
#two-line {
  line-height: 30rpx;
}

/* 收货人 */
.consignee {
  height: 165rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  padding: 24rpx;
  padding-left: 57rpx;
  position: relative;
}

.location-icon {
  position: absolute;
  top: 20rpx;
  left: 17rpx;
}

/* 收货人姓名 */
.consignee-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

/* 收货地址 */
.consignee-address {
  font-size: 24rpx;
  line-height: 34rpx;
  color: #858585;
}

/* 快递 */
.express {
  margin-top: 20rpx;
  height: 123rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  padding: 24rpx;
  padding-left: 57rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.express-company {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.express-number {
  font-size: 24rpx;
  line-height: 34rpx;
  color: #858585;
}

.express-icon {
  position: absolute;
  top: 20rpx;
  left: 17rpx;
}

/* 订单商品 */
.order-goods {
  margin-top: 20rpx;
  padding-top: 20rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  background-color: #ffffff;
}

.order-goods-details {
  display: flex;
  padding-bottom: 24rpx;
}

.order-goods-details-left {
  height: 218rpx;
  width: 218rpx;
  overflow: hidden;
  border-radius: 8px;
}

.thumb {
  height: 100%;
  width: 100%;
  flex-shrink: 0;
}

.order-goods-details-right {
  flex: 1;
  margin-left: 17rpx;
  display: flex;
  flex-direction: column;
}

.order-goods-details-right view {
  flex: 1;
}

.goods-name {
  width: 370rpx;
  display: -webkit-box; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 2; 
  overflow: hidden;
  margin-top: 20rpx;
  font-size: 28rpx;
  line-height: 32rpx;
  font-weight: bold;
  color: #000000;
}

.goods-specs {
  margin-top: 20rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  font-weight: 400;
}

.goods-money {
  font-size: 28rpx;
  line-height: 28rpx;
  display: flex;
  justify-content: space-between;
}
.goods-money-left {
  font-weight: 400;
  color: var(--mainblue);
}

.goods-money-right {
  text-align: right;
  font-size: 24rpx;
}

.list-form {
  padding: 30rpx 14rpx;
  display: flex;
  justify-content: space-between;
  border-top: 1px solid #f3f3f3;
  font-size: 24rpx;
  line-height: 24rpx;
}

.totle-money .form-right,
.express-fee .form-right {
  color: var(--mainblue);
  font-weight: bold;
}

/* 底部按钮组 */
.button-group {
  padding: 0 24rpx;
  position: absolute;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  background-color: #ffffff;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  box-sizing: border-box;
}

/* 按钮 */
.btn {
  margin-left: 20rpx;
  height: 60rpx;
  width: 170rpx;
  font-size: 28rpx;
  border-radius: 30rpx;
  text-align: center;
  line-height: 60rpx;
  box-sizing: border-box;
}
/* 实心按钮 */
.solid-btn {
  background-color: var(--mainblue);
  color: #ffffff;
}
/* 空心按钮 */
.empty-btn {
  color: var(--mainblue);
  border: 1px solid var(--mainblue);
}

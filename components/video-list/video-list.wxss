:host {
  display: block;
}
/* 视频-列表 */
.video-list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
/* 视频-元素 */
.video-item {
  width: 0;
  height: 0;
  position: relative;
}
/* 视频-元素-内部 */
.video-item .video-item-inner {
  width: calc(100% - 10rpx);
  height: calc(100% - 10rpx);
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;

  font-size: 24rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
/* 视频-选择 */
.video-choose .video-item-inner {
  border: 4rpx dashed #F2F2F2;
  box-sizing: border-box;
}
/* 视频-元素-封面 */
.video-item-cover {
  width: 100%;
  height: 100%;
}
/* 视频-元素-图标 */
.video-item-icon {
  height: 50%;
  width: 100%;
  margin: 10rpx 0;
  display: block;
}
:host {
  display: block;
}

/* 导师-元素 */
.tutor-item {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}
/* 导师-元素-详情 */
.tutor-item-detail {
  flex: 1;
  margin: 0 20rpx;
}
/* 导师-元素-昵称 */
.tutor-item-avatar {
  width: 140rpx;
  height: 140rpx;
  border: 2rpx solid var(--main);
}
/* 导师-元素-昵称 */
.tutor-item-nickname {
  height: 32rpx;
  line-height: 32rpx;
  font-size: 32rpx;
  margin: 20rpx 0;
}
/* 导师-元素-称号 */
.tutor-item-designation {
  font-size: 28rpx;
  line-height: 28rpx;
  height: 28rpx;
  color: #999;
  margin: 20rpx 0;
}
/* 导师-元素-热度 */
.tutor-item-hot {
  color: var(--main);
  height: 24rpx;
  line-height: 24rpx;
  font-size: 24rpx;
  margin: 20rpx 0;
  display: flex;
  align-items: center;
}
.tutor-item-hot-icon {
  width: 24rpx;
  height: 24rpx;
  display: block;
}
/* 导师-元素-进入 */
.tutor-item-enter {
  border-radius: 10rpx;
  border: 2rpx solid currentColor;
  color: var(--main);
  font-size: 24rpx;
  line-height: 40rpx;
  height: 40rpx;
  padding: 0 10rpx;
}
:host {
  position: fixed;
  z-index: 9001;
}
/* 蒙版 */
.popup-mask {
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  touch-action: none;
}

/* 外框 */
.popup-container {
  background-color: #FFF;
  border-radius: 16rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: fit-content;
  height: fit-content;
  touch-action: none;
  overflow: hidden;
}

/* 弹框-中部 */
.popup-body {
  /* height: 514rpx; */
  padding-bottom: 20rpx;
  width: 450rpx;
  overflow: hidden;
  /* display: flex; */
  /* align-items: center; */
  /* padding: 10rpx; */
}

/* 输入框 */
.cdkey-input {
  border: 2rpx solid #F2F2F2;
  width: 400rpx;
  height: 70rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  margin: 10rpx;
  padding: 0 10rpx;
}

/* 提交 */
.cdkey-submit {
  margin: 0 auto;
  margin-top: 20rpx;
  width: 316rpx;
  /* background-image: linear-gradient(90deg, #EF8644, #ED6F3F); */
  background-color: #f8803d;
  color: #FFF;
  border-radius: 35rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 24rpx;
}

/* 修改后 */
.tan-icon {
  width: 100%;
  height: 207rpx;
}

.content {
  margin-top: 30rpx;
  margin-bottom: 36rpx;
  text-align: center;
  font-weight: bold;
  font-size: 36rpx;
}
.placeholder {
  margin-left: 14rpx;
}
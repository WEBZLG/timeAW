/* 铺满 */
.fill {
  width: 100%;
  height: 100%;
  display: block;
}
/* 封面 */
.cover {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  background-color: rgba(0, 0, 0, 0.4);
}
/* 按钮 */
.button {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
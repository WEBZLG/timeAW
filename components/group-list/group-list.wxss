:host {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}
.container {
  flex-grow: 1;
  overflow: auto;
  background-color: #FFF;
}



/* 团队-元素 */
.group-item {
  display: flex;
  align-items: center;
  margin: 40rpx 20rpx;
}
/* 团队-元素-详情 */
.group-item-detail {
  flex-grow: 1;
  width: 0;
  margin: 0 20rpx;
}
/* 团队-元素-按钮 */
.group-item-button {
  padding: 0 20rpx;
  line-height: 60rpx;
  height: fit-content;
  font-size: 24rpx;
  border-radius: 10rpx;
  border: 2rpx solid;
  border-color: currentColor;
  color: var(--main);
}
/* 团队-元素-头像 */
.group-item-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2rpx solid var(--main);
}
.group-item-avatar-image {
  width: 100%;
  height: 100%;
}
.group-item-nickname-box {
  display: flex;
  align-items: center;
}
/* 团队-元素-昵称 */
.group-item-nickname {
  font-size: 28rpx;
}
/* 会员等级 */
.group-item-group-name {
  padding: 0 5rpx;
  margin-left: 12rpx;
  font-size: 24rpx;
  line-height: 38rpx;
  text-align: center;
  border: 1px solid var(--main);
  border-radius: 4px;
  color: var(--main);
}
/* 团队-元素-统计 */
.group-item-count {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
}
.group-item-count-image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
  display: block;
}
/* 团队-元素-日期 */
.group-item-date {
  font-size: 24rpx;
  color: #999;
}
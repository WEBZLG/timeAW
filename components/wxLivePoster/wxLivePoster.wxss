:host {
  position: relative;
  display: block;
  /* overflow: hidden; */
}

.poster-image {
  display: block;
  /* display: none; */
  width: 100%;
  /* height: 100%; */
  margin: auto;
}

.poster-canvas {
  display: block;
  position: fixed;
  left: 0;
  top: 100vh;
  transform: scale(0);
}

.poster-loading {
  background-color: #fff;
  border-radius: 20rpx;
  display: block;
  width: 200rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  margin: auto;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
}
/* 分享-元素 */
:host {
  margin: 20rpx 0;
  background-color: #FFF;
  overflow: auto;
  display: block;
}

/* 分享-元素-图片 */
.share-item-picture {
  margin: auto;
  width: 720rpx;
}
.share-item-picture-type1 {
  width: 100%;
  height: 400rpx;
}
.share-item-picture-type2 {
  width: 480rpx;
}
.share-item-picture-type3 {
  width: 100%;
}

/* 分享-元素-视频 */
.share-item-video {
  margin: 0 20rpx;
  height: 450rpx;
}



/* 用户信息 */
.userInfo {
  display: flex;
  margin: 20rpx;
}
/* 用户信息-详情 */
.userInfo-detail {
  margin-left: 10rpx;
}
/* 用户信息-头像 */
.userInfo-avatar {
  width: 80rpx;
  height: 80rpx;
}
/* 用户信息-昵称 */
.userInfo-nickname {
  font-size: 32rpx;
  line-height: 50rpx;
  height: 50rpx;
}
/* 用户信息-分类 */
.userInfo-share {
  color: var(--main);
  font-size: 20rpx;
  height: 30rpx;
  line-height: 30rpx;
}



/* 分享-元素-内容 */
.share-item-content {
  margin: 10rpx 20rpx;
  font-size: 28rpx;
  display: block;
  color: #000;
}
/* 分享-元素-发布日期 */
.share-item-date {
  font-size: 20rpx;
  color: #999;
  margin: 10rpx 20rpx;
}



/* 菜单-列表 */
.menu-list {
  display: flex;
  justify-content: space-evenly;
  font-size: 28rpx;
  height: 60rpx;
  color: #000;
}
/* 菜单-元素 */
.menu-item {
  display: flex;
  align-items: center;
  justify-content: center;
}
.menu-item-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 6rpx;
}

/* 4张图 */
.listImg4 {
  width: 475rpx; 
  padding: 13rpx;
  margin: 10rpx;
}
.itemImg4 {
  margin: 5rpx;
  width: 114px;
  height: 114px;
  float: left;
  /* margin: auto; */
 
}
.itemImg4 image {
  width: 100%;
  height: 100%;
}
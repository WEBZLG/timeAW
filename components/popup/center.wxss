/* 外框 */
.popup-center-container {
  position: fixed;
  top: -100rpx;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: fit-content;
  height: fit-content;
  touch-action: none;
}

/* 顶部-关闭 */
.popup-center-container .popup-close {
  position: absolute;
  left: 0;
  right: 0;
  top: 100%;
  height: 100rpx;
  width: 100rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin: auto;
  z-index: 1001;
}

.popup-center-container .popup-close-icon {
  width: 100%;
  height: 100%;
  display: block;
}

